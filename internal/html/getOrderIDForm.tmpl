<html>
<form class="form-horizontal">
    <fieldset>

        <!-- Form Name -->
        <legend>Найти заказ по ID</legend>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="">ID</label>
            <div class="col-md-4">
                <input id="" name="id" type="text" placeholder="" class="form-control input-md" required="" value="{{ .orderID }}">

            </div>
        </div>

        <!-- Textarea -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="jsonAnswer">Json ответ</label>
            <div class="col-md-4">
                <style>
                    textarea.form-control {
                        width:  500px;
                        height: 300px;
                        padding: 5px 10px 5px 10px;
                        border:1px solid #999;
                    }
                </style>
                <textarea class="form-control" id="jsonAnswer" name="">{{ .jsonAnswer }}</textarea>
            </div>
        </div>

        <!-- Button -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="singlebutton"></label>
            <div class="col-md-4">
                <style>
                    .btn {
                        padding: 16px 16px 16px 16px;
                        margin-top: 16px;
                    }
                </style>
                <button id="singlebutton" name="" class="btn btn-default">Найти заказ</button>
            </div>
        </div>

    </fieldset>
</form>
</html>